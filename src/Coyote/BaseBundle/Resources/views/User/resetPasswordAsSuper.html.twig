{% extends "CoyoteBaseBundle::layout.html.twig" %}

{% block title %}Reset{% endblock %}

{% block body -%}

<h1><span class="fa fa-users"></span> Reset Password for {{ user.username }}</h1>

<div class="row">
	<div class="col-xs-12">
		<div class="panel panel-default">
			<div class="panel-heading">General</a></div>
			<div class="panel-body">
				{{ form_start(form) }}
				<div class="form-group">
