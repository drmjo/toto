{% extends 'CoyoteBaseBundle::base.html.twig' %}

{% block stylesheets %}
{#<link rel="stylesheet" href="{{ asset('bundles/coyotebase/css/style.min.css') }}">#}
{% endblock %}


{% block layout %}

{% include('CoyoteBaseBundle::nav.html.twig') %}


<div class="container-fluid">
  <div class="row">
      
{##########################################}
{#                SIDE NAV                #}
{##########################################}

{% if app.user.username is defined %}
    <div class="col-sm-3 col-md-2 sidebar">
        {% include('CoyoteBaseBundle::left_nav.html.twig') %}
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
{% else %}
    <div class="col-sm-12 main">
{% endif %}
    
    
        
    {% if app.session.flashbag.peek('success') is not empty %}
    <div class="success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <ul>
            {% for message in app.session.flashbag.get('success') %}
            <li class="">{{ message | raw }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

    {% if app.session.flashbag.peek('error') is not empty %}
    <div class="error alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <ul>
            {% for message in app.session.flashbag.get('error') %}
            <li class="">{{ message | raw }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

            
        {% block body %}{% endblock %}
        </div>
      </div>
    </div>
{% endblock %}