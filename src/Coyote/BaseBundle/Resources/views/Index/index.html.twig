{% extends "CoyoteBaseBundle::publicLayout.html.twig" %}

{% block body %}

<div class="container">
	
<p>{{ app.request.server.get("REMOTE_ADDR") }}@{{ "now"|date("Y-m-d\\TH:m:s") }}</p>

{% if app.user %}
<p>Username: {{ app.user.username }}</p>
<a href="{{ path('fos_user_security_logout') }}">Logout</a>

{% else %}
<a href="{{ path('fos_user_security_login') }}">Login</a>
<a href="{{ path('fos_user_registration_register') }}">Register</a>
{% endif %}

</div>

{% endblock body %}
